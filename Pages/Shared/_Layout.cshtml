<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bleh Nmah</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPagesBlehNmah.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light bg-gradient border-bottom box-shadow mb-3 position-relative">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Bleh Nmah</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div>
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Collections/Index">Collections</a>
                            </li>
                        
                        </ul>
                    </div>
                    <div>
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Paintings/Index">Paintings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Photographs/Index">Photographs</a>
                            </li>
                            <li class="nav-item d-flex">
                                <a class="nav-link text-dark" asp-area="" asp-page="/About">About Me</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <form class="d-flex position-absolute mt-2 top-0 start-50 translate-middle-x" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <input type="submit" value="Filter" />
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Bleh Nmah - <a asp-area="" asp-page="/About">About Me</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
