@page "{id:int}"
@model RazorPagesBlehNmah.Pages.Photographs.DetailsModel

@{
    ViewData["Title"] = Model.Photograph.Title;
}

@{
    int i = Convert.ToInt32(ViewContext.RouteData.Values["id"]);
}

@{
    int? collection = Model.Photograph.CollectionID;
}

<div class="row row-cols-1 row-cols-md-2 g-4">
    <div class="col">
        <div class="card">
            <img src="@Html.DisplayFor(model => model.Photograph.MediaLocation)" class="card-img-top" alt="@Html.DisplayFor(model => model.Photograph.Title)">
        </div>
    </div>
    <div>
        <dl class="row">
            <dt class="category col-sm-4">
                @Html.DisplayNameFor(model => model.Photograph.Title)
            </dt>
            <dd class="display col-sm-8">
                @Html.DisplayFor(model => model.Photograph.Title)
            </dd>

            <dt class="category col-sm-4">
                @Html.DisplayNameFor(model => model.Photograph.Year)
            </dt>
            <dd class="display col-sm-8">
                @Html.DisplayFor(model => model.Photograph.Year)
            </dd>
            <dt class="category col-sm-4">
                @Html.DisplayNameFor(model => model.Photograph.Location)
            </dt>
            <dd class="display col-sm-8">
                @Html.DisplayFor(model => model.Photograph.Location)
            </dd>
            <dt class="category col-sm-4">
                @Html.DisplayNameFor(model => model.Photograph.Collection)
            </dt>
            <dd class="display col-sm-8">
                @Html.DisplayFor(model => model.Photograph.CollectionID)
            </dd>
        </dl>
    </div>
    <div>
        <a role="button" class="btn btn-light" asp-page="./Index">Back to List</a>
        @if (i > 1)
        {
            <a role="button" class="btn btn-light" asp-page="./Details" asp-route-id="@(i-1)">Prev</a>
        }
        @if (i != 154)
        {
            <a role="button" class="btn btn-light" asp-page="./Details" asp-route-id="@(i+1)">Next</a>
        }
        <a role="button" class="btn btn-light" asp-page="../Index/Collections/Details/" asp-route-id="@(1)">Collection</a>
    </div>
</div>