@page
@model RazorPagesBlehNmah.Pages.Collections.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container text-center">
    <div class="row">
        <div class="col-3">
            <div class="container-fluid">
                <img src="https://i.imgur.com/2cZ2f9o.jpg" class="card-img-top" alt="profile-picture">
                <div role="tabpanel">
                    <div class="list-group list-group-flush" id="myList" role="tablist">
                        @foreach (var item in Model.Collection)
                        {
                            <a class="list-group-item list-group-item-action" data-bs-toggle="list" href="#@Html.DisplayFor(modelItem => item.CollectionName)" role="tab">@Html.DisplayFor(modelItem => item.CollectionName)</a>
                        }
                    </div>
                </div>
                <a target="_blank" rel="noreferrer" href='https://www.linkedin.com/in/bleh-s/'>LinkedIn</a>
                <a target="_blank" rel="noreferrer" href='https://github.com/Blehjo'>Github</a>
                <a target="_blank" rel="noreferrer" href='https://blehseton.com'>Applications</a>
                <a target="_blank" rel="noreferrer" href='https://drive.google.com/file/d/1eQh9PvQWSuX5sCxs8_-zjOkuwpYO6KLz/view?usp=sharing'>Resume</a>
            </div>
        </div>
        <div class="col-9">
            <div class="row">
                <div class="container-fluid">
                    <div class="card text-bg-dark">
                        <img src="https://i.imgur.com/bJBaDTF.jpg" style="border-radius: .5rem; width: 100rem; height: 25rem; object-fit: cover;" class="card-img img-fluid" alt="the kids are losing their minds">
                        <div class="bg-dark p-2 bg-opacity-25 card-img-overlay"></div>
                        <div style="width: 80%; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); border-radius: .5rem;" class="text-white card-img-overlay">
                            <h5 class="card-title">Bleh Nmah</h5>
                            <p class="card-text">Welcome to the art journey of Bleh Nmah and continue with him as he continues to explore the human emotion through color theory.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-content">
                @foreach (var item in Model.Collection)
                {
                    <div class="tab-pane " id="@Html.DisplayFor(modelItem => item.CollectionName)" role="tabpanel">@Html.DisplayFor(modelItem => item.Description)</div>
                }
                
            </div>
            <div class="row row-cols-2">
                @foreach (var item in Model.Collection)
                {
                    <div class="mt-4 col">
                        <a asp-page="./Details" asp-route-id="@item.CollectionID">
                            <div style="position: relative; text-align: center;" class="card">
                                <img src="@Html.DisplayFor(modelItem => item.CoverImage)" style="border-radius: .5rem; width: 100%; height: 25rem; object-fit: cover;" class="card-img img-fluid" alt="@Html.DisplayFor(modelItem => item.CollectionName)">
                                <div class="bg-dark p-2 bg-opacity-25 card-img-overlay"></div>
                                <div style="width: 100%; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); border-radius: .5rem;" class="text-white card-img-overlay">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.CollectionName)</h5>
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
</div>


