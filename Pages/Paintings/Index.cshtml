@page
@model RazorPagesBlehNmah.Pages.Paintings.IndexModel

@{
    ViewData["Title"] = "Paintings";
}

<h1>Paintings</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model.Painting)
    {
        <div class="mt-4 col">
            <a role="button" data-bs-toggle="modal" data-bs-target="#modal-@(item.Id)">
                <div style="position: relative; text-align: center;" class="card">
                    <img src="@Html.DisplayFor(modelItem => item.MediaLocation)" style="border-radius: .5rem; width: 100%; height: 25rem; object-fit: cover;" class="card-img img-fluid" alt="@Html.DisplayFor(modelItem => item.Title)">
                </div>
            </a>
        </div>
        <div class="modal fade" id="modal-@(item.Id)" data-bs-keyboard="false" tabindex="-1" aria-labelledby="@item.Title" aria-hidden="true">
            <div style="text-align: center;" class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="modal-@(item.Id)">@Html.DisplayFor(modelItem => item.Title)</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="card bg-light">
                            <img style="width: auto; height: auto;" src="@Html.DisplayFor(modelItem => item.MediaLocation)" alt="@Html.DisplayFor(modelItem => item.Title)">
                        </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <a role="button" class="btn btn-light" style="text-decoration: none;" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                        </div>
                    </div>
            </div>
        </div>
    }
</div>
